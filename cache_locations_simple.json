{
  "metadata": {
    "version": "1.0",
    "description": "Simplified macOS Cache Locations - User Accessible Only",
    "last_updated": "2025-01-17",
    "author": "Cache App Development Team"
  },
  "user_caches": [
    {
      "id": "user_library_caches",
      "name": "User Library Caches",
      "path": "~/Library/Caches/",
      "description": "User-specific cache files",
      "permissions": "User accessible",
      "safety_level": "safe",
      "recommendation": "Safe to clean - user application caches",
      "file_patterns": ["*.cache", "*.tmp", "*.log"],
      "size_estimate": "100MB-2GB",
      "cleanup_risk": "low"
    },
    {
      "id": "user_temp",
      "name": "User Temporary Files",
      "path": "~/tmp/",
      "description": "User temporary files",
      "permissions": "User accessible",
      "safety_level": "safe",
      "recommendation": "Safe to clean - temporary user files",
      "file_patterns": ["*"],
      "size_estimate": "10MB-100MB",
      "cleanup_risk": "low"
    }
  ],
  "application_caches": [
